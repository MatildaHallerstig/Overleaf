@article{doi:10.1175/1520-0493(2003)131<2394:RRFTSO>2.0.CO;2,
author = { George H.  Bryan  and  John C.  Wyngaard  and  J. Michael  Fritsch },
title = {Resolution Requirements for the Simulation of Deep Moist Convection},
journal = {Monthly Weather Review},
volume = {131},
