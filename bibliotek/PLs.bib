@article{doi:10.1175/JAS-D-16-0307.1,
author = {White, B. A. and Buchanan, A. M. and Birch, C. E. and Stier, P. and Pearson, K. J.},
title = {Quantifying the Effects of Horizontal Grid Length and Parameterized Convection on the Degree of Convective Organization Using a Metric of the Potential for Convective Interaction},
journal = {Journal of the Atmospheric Sciences},
