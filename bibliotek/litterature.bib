@Article{doi:10.1002/jgrd.50246,
  Title                    = {Polar lows over the Nordic and Labrador Seas: Synoptic circulation patterns and associations with North Atlantic-Europe wintertime weather regimes},
  Author                   = {Mallet paul-Etienne and Claud Chantal and Cassou Christophe and Noer Gunnar and Kodera Kunihiko},
