@Article{Li2014,
  Title                    = {Improvements in WRF simulation skills of southeastern United States summer rainfall: physical parameterization and horizontal resolution},
  Author                   = {Li, Laifang and Li, Wenhong and Jin, Jiming},
  Journal                  = {Climate Dynamics},
